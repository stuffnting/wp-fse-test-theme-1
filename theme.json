{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "color": {
      "custom": false,
      "customGradient": false,
      "defaultPalette": false,
      "defaultGradients": false,
      "link": true,
      "palette": [
        {
          "slug": "purple",
          "color": "#D1D1E4",
          "name": "Purple"
        },
        {
          "slug": "red",
          "color": "#E4D1D1",
          "name": "Red"
        },
        {
          "slug": "dark-grey",
          "color": "#404040",
          "name": "Dark Grey"
        }
      ],
      "gradients": [
        {
          "slug": "purple-to-red",
          "gradient": "linear-gradient(160deg, var(--wp--preset--color--purple), var(--wp--preset--color--red))",
          "name": "Purple to Red"
        }
      ],
      "duotone": [
        {
          "colors": ["#1d1f35", "#6cace4"],
          "slug": "dark-blue-and-light-blue",
          "name": "Dark blue and light blue"
        },
        {
          "colors": ["#1d1f35", "#c7c0af"],
          "slug": "dark-blue-and-beige",
          "name": "Dark blue and beige"
        }
      ]
    },
    "typography": {
      "lineHeight": false,
      "fontWeight": true,
      "fontStyle": true,
      "textTransform": true,
      "letterSpacing": false,
      "textDecoration": true,
      "customFontSize": false,
      "dropCap": false,
      "fontFamilies": [
        {
          "fontFamily": "-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen-Sans,Ubuntu,Cantarell,Helvetica Neue,sans-serif",
          "slug": "some-fonts",
          "name": "System Fonts"
        },
        {
          "fontFamily": "Helvetica Neue, Helvetica, Arial, sans-serif",
          "slug": "some-more-verdana",
          "name": "Helvetica/Arial"
        }
      ],
      "fontSizes": [
        {
          "slug": "super-small",
          "size": "0.5rem",
          "name": "Super Small"
        },
        {
          "slug": "extra-normal",
          "size": "1rem",
          "name": "Extra Small"
        },
        {
          "slug": "quite-large",
          "size": "3rem",
          "name": "Quite large"
        }
      ]
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "spacing": {
      "blockGap": true,
      "padding": true,
      "margin": true,
      "units": ["px", "em", "rem", "vh", "vw"]
    },
    "layout": {
      "contentSize": "840px",
      "wideSize": "1100px"
    },
    "custom": {
      "my-spacing": "14px"
    },
    "blocks": {
      "core/heading": {
        "color": {
          "palette": [
            {
              "slug": "dark-blue",
              "color": "#1d1f35",
              "name": "Dark blue"
            }
          ]
        }
      }
    }
  },
  "styles": {
    "color": {
      "background": "#E0E0E0",
      "text": "var(--wp--custom--color--purple)"
    },
    "spacing": {
      "blockGap": "1.5rem"
    },
    "blocks": {
      "core/heading": {
        "color": {
          "text": "var(--wp--preset--color--vivid-red)"
        }
      },
      "core/cover": {
        "border": {
          "color": "var(--wp--preset--color--luminous-vivid-amber)",
          "width": "5px",
          "style": "solid",
          "radius": "20px"
        },
        "elements": {
          "h2": {
            "color": {
              "text": "var(--wp--preset--color--vivid-green-cyan)"
            }
          },
          "link": {
            "color": {
              "text": "var(--wp--preset--color--luminous-vivid-amber)"
            },
            "typography": {
              "textDecoration": "underline"
            }
          }
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "area": "header",
      "title": "Nice Header"
    },
    {
      "name": "footer",
      "area": "footer",
      "title": "Big Footer"
    },
    {
      "name": "another-template-part",
      "area": "uncategorized",
      "title": "Another template part"
    }
  ],
  "customTemplates": [
    {
      "name": "home",
      "title": "Home page template",
      "postTypes": ["page"]
    },
    {
      "name": "custom-template",
      "title": "It does wonderful things",
      "postTypes": ["page", "post"]
    }
  ]
}
